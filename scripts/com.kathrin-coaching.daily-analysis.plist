<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.kathrin-coaching.daily-analysis</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/nickheymann/Desktop/kathrin-coaching-github/scripts/daily-analysis-cron.sh</string>
    </array>

    <!-- Täglich um 01:30 Uhr (lokale Zeit) - ca. 00:30 UTC im Winter -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>1</integer>
        <key>Minute</key>
        <integer>30</integer>
    </dict>

    <!-- Umgebungsvariablen -->
    <!-- WICHTIG: GROQ_API_KEY wird aus .env Datei geladen, NICHT hier eintragen! -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>

    <!-- Logging -->
    <key>StandardOutPath</key>
    <string>/Users/nickheymann/Desktop/kathrin-coaching-github/logs/launchd-stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/nickheymann/Desktop/kathrin-coaching-github/logs/launchd-stderr.log</string>

    <!-- Nur ausführen wenn eingeloggt -->
    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
